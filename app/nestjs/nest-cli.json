{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/user/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/user/tsconfig.app.json",
    "assets": [
      "**/*.proto"
    ],
    "watchAssets": true
  },
  "monorepo": true,
  "root": "apps/user",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "driver": {
      "type": "application",
      "root": "apps/driver",
      "entryFile": "main",
      "sourceRoot": "apps/driver/src",
      "compilerOptions": {
        "tsConfigPath": "apps/driver/tsconfig.app.json"
      }
    },
    "trip": {
      "type": "application",
      "root": "apps/trip",
      "entryFile": "main",
      "sourceRoot": "apps/trip/src",
      "compilerOptions": {
        "tsConfigPath": "apps/trip/tsconfig.app.json"
      }
    },
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user/tsconfig.app.json"
      }
    }
  }
}